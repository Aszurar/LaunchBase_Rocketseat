{% extends "layoutcards.njk" %}

{% block style %}
    <link rel="stylesheet" href="/visuals/projects.css">
{% endblock %}

{% block content %}
    <h1>Projetos</h1>

    <section class="cards-projects">
        {% for item in items %}

            <div class="card-project">

                <div class="image-project {{'featured-wrapper' if item.featured}}" id="{{item.id}}" title="{{item.title}}">
                    <img src="/assets/{{item.title}}.png" alt="A imagem de {{item.title}}">
                    {% if item.featured %}
                        <div class="featured">Destaque!</div>
                    {% endif %}
                </div>

                <a href="{{item.link}}" target="_blank">
                    <div class="card-project__content">
                        <p>{{item.info}}</p>
                    </div>
                </a>

                <div class="card-project__technologies">
                    {% for technologie in item.tech %}
                        <i class='fab'>&{{technologie}};</i>
                    {% endfor %}

                </div>

                <div class="card-project__info">
                    <p>{{item.duration}}</p>
                    <p class="card-project__type">{{item.type}}</p>
                </div>

            </div>
        {% endfor %}

    </section>

    <script src="/scripts/projects.js"></script>

{% endblock %}