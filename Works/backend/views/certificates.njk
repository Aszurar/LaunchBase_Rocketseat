{% extends "layoutcards.njk" %}

{% block style %}
    <link rel="stylesheet" href="/visuals/certificates.css">
{% endblock %}

{% block content %}
    <h1>Certificados</h1>

    <section class="cards-certificates">
        {% for item in cert %}
            <div class="card-certificate" id="{{item.id}}">

                <div class="image-certificate">
                    <img src="/assets/{{item.img}}.png" alt="">
                </div>

                <div class="card-certificate__content">
                    <p>{{item.info}}</p>
                </div>

                <div class="card-certificate__technologies">
                    {% for icon in item.tech %}
                        {{icon}}
                    {% endfor %}
                </div>

                <div class="card-certificate__info">
                    <p>{{item.duration}}</p>
                    <p class="card-certificate__type">{{item.type}}</p>
                </div>

            </div>
        {% endfor %}

    </section>
    <!-- <iframe src="" frameborder="0"></iframe> -->

    <div class="card-certificate-overlay">
        <div class="card-certificate-modal">

            <a class="max-modal">
                <i class="material-icons">fullscreen</i>
            </a>

            <a class="min-modal">
                <i class="material-icons">fullscreen_exit</i>
            </a>

            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0" id="pageIframe"></iframe>
            </div>

        </div>
    </div>

    <script src="/scripts/certificates.js"></script>
{% endblock %}