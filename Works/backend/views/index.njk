{% block content %}

    <div id="wrapper">
        <img src="https://avatars1.githubusercontent.com/u/64987824?s=460&u=51e8a76f68447d04bb10d3f57e77df673874bad6&v=4"
            alt="Lucas de Lima">
        <h1>Lucas de Lima</h1>
        <!-- <h2>Estudante de Engenharia da Computação - <a href="https://www.ufpb.br/"target="_blank" >UFPB</a> </h1> -->
        <!-- <h2>Estudante de Desenvolvimento Web - <a href="https://rocketseat.com.br" target="_blanck" >Rocketseat</a> </h2> -->
        <p>Estudando programação com foco em Javascript, Python, HTML e CSS com o objetivo de se tornar um desenvolvedor
            fullstack</p>
    </div>

    <form action="" class="student">
        <fieldset>

            <legend>
                <h2>Estudante</h2>
            </legend>

            <div class="items-grid">

                <li data-id="UFPB">
                    <a href="https://www.ufpb.br/" target="_blank">
                        <img src="/assets/ufpb.svg" alt="Universidade Federal da Paraíba">
                        <span>Engenharia da Computação</span>
                    </a>
                </li>

                <li class="student-card" data-id="Rocketseat">
                    <a class="text-rocketseat">
                        <img src="/assets/rocketseat.svg" alt="Rocketseat">
                        <span>Rocketseat</span>
                        <p>LaunchBase</p>
                    </a>
                </li>

            </div>

        </fieldset>
    </form>

    <div class="student-overlay">
        <div class="modal-student">

            <a class="max-modal">
                <i class="material-icons">fullscreen</i>
            </a>

            <a class="min-modal">
                <i class="material-icons">fullscreen_exit</i>
            </a>

            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>


            <div class="content-student">
                <h1 class="title">LaunchBase - Rocketseat</h1>
                <iframe src="https://www.rocketseat.com.br/launchbase" frameborder="0"></iframe>
            </div>

        </div>
    </div>

{% endblock %}