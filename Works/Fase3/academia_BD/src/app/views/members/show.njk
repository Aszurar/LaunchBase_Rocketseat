{% extends "layout.njk" %}

{% block head %}
   <title>{{member.name}}</title>
{% endblock %}

{% block content %}
   <div class="card">
      <section class="avatar" 
               style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>
     
      <section class="details">

         <h3>{{texts.legends[2]}}</h3>

         <div class="item members">
            <div>{{texts.inputsFields[1]}}</div>
            <div>{{member.name}}</div>
         </div>

         <div class="item members">
            <div>{{texts.headTable[1]}}</div>
            <div>{{member.email}}</div>
         </div>

         <div class="item members">
            <div>{{texts.inputsFields[8]}}</div>
            <div>{{member.birth}}</div>
         </div>

         <div class="item members">
            <div>{{texts.inputsFields[3]}}</div>
            <div>{{"Masculino" if member.gender == "M" else "Feminino"}}</div>
         </div>

         <div class="item members">
            <div>{{texts.inputsFields[6]}}</div>
            <div>{{member.blood}}</div>
         </div>

         <div class="item members">
            <div>{{texts.headTable[2]}}</div>
            <div>{{member.weight}} kg</div>
         </div>

         <div class="item members">
            <div>{{texts.headTable[3]}}</div>
            <div>{{member.height}} cm</div>
         </div>

         <div class="item members">
            <div>{{texts.inputsFields[9]}}</div>
            <div>{{member.instructor_name}}</div>
         </div>

         <div class="item members">
            <a href="/members/{{member.id}}/edit" class="button buttons-members">Editar</a>
         </div>
      </section>
   </div>
{% endblock content%}