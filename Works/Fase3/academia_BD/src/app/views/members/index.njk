{% extends "layout.njk" %}

{% block content %}
   <div class="card table-container">
      <a href="/members/create">Novo</a>

      <table width="100%">
         <thead>
            <tr>
               <th>Membros</th>
               <th>Email</th>
               <th>Peso</th>
               <th>Altura</th>
               <th>Ação</th>
            </tr>
         </thead>

         <tbody>
            {% for member in members %}
               {# tr linha/ td colunas dentro do tbody #}
               <tr>
                  <td>
                     <span style="background-image: url({{member.avatar_url}});"></span>
                     <h3>{{member.name}}</h3>
                  </td>

                  <td>
                     <h4>{{member.email}}</h4>
                  </td>
                  
                  <td>
                     {{member.weight}} kg
                  </td>

                  <td>
                     {{member.height}} cm
                  </td>

                  <td>
                     <a href="/members/{{member.id}}">ver</a>
                  </td>
               </tr>

            {% endfor %}
         </tbody>
      </table>
      
   </div>
{% endblock content%}