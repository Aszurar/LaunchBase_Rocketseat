{% extends "layout.njk" %}

{% block head %}
   <title>{{texts.buttons[2]}} {{texts.headTable[0]}}</title>
{% endblock %}

{% block content %}

   <div class="card">

      <section class="avatar" 
      style="background: url({{instructor.avatar_url}}) no-repeat center center / cover"></section>

      <section class="details">

         <form method="POST" action="/instructors?_method=PUT">

            <h3>{{texts.buttons[2]}} {{texts.headTable[0]}}</h3>

            {% include "instructors/fields.njk" %}

            <input type="hidden" name="id" value="{{instructor.id}}">
         </form>

         <form id="form-delete" action="/instructors?_method=DELETE" method="post">
            <input class="remove-input" type="hidden" name="id" value={{instructor.id}}>
            <button type="submit">Deletar</button>
         </form>

      </section>
   </div>
   
   <script src="/scripts/gender-toggle.js"></script>
   {% include "../confirm.njk" %}
{% endblock content%}