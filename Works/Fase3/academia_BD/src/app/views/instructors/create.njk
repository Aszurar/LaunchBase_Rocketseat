{% extends "layout.njk" %}

{% block head %}
   <title>{{texts.buttons[0]}} {{texts.headTable[0]}}</title>
{% endblock %}}

{% block content %}
   <form class="card" method="POST" action="/instructors">
      <section 
         class="avatar"
         {# configurando a imagem de fundo vindo de um api de coleção de imagens de academia do unsplash, 
         focando no centro da imagem, configurando para não repetir e abranger a tela inteira\ #}
         style="background: url(https://source.unsplash.com/collection/8353395/700x700) no-repeat center center / cover">
      </section>
      
      <section class="details">
      
         <h3>{{texts.buttons[0]}} {{texts.headTable[0]}}</h3>
          
         {% include "instructors/fields.njk" %}

      </section>
   </form>
   <script src="/scripts/gender-toggle.js"></script>
{% endblock content%}
