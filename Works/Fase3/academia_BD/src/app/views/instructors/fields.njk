      <div class="item">
         <div>Avatar URL</div>
         <div>
            <input 
               type="url" 
               name="avatar_url"
               placeholder="https://..."
               value="{{instructor.avatar_url}}"
               >
         </div>
      </div>
      
      <div class="item">
         <div>Instrutor</div>
         <div>
            <input 
               type="text" 
               name="name"
               placeholder="Nome do Instrutor"
               value="{{instructor.name}}" 
               >
         </div>
      </div>


      <div class="item">
         <div>Data de Nascimento</div>
         <div>
         {# INPUT TIPO DATE, CONFIGURA PARA RECEBER JÁ UM DATA COM CALENDÁRIO DISPONÍVEL #}
            <input
               type="date" 
               name="birth"
               value="{{instructor.birth}}"
               >
         </div>
      </div>
      
      <div class="item">
         <div>Sexo</div>
            <div class="container-input-gender">

               <span id="man-span" ><input type="radio" 
                            name="gender"
                            id="man-input"
                            value="M" {% if instructor.gender == "M" %} 
                              checked 
                            {% endif %} 
                            ><p>Masculino</p></span>
 
               
               <span id="girl-span"><input type="radio" 
                            name="gender"
                            id="girl-input"
                            value="F" 
                            {% if instructor.gender == "F" %} 
                              checked 
                            {% endif %}
                            ><p>Feminino</p></span>
            </div>
      </div>

      <div class="item">
         <div>Area de Atuação</div>
            <div>
               <input 
                     type="text" 
                      name="services"
                      placeholder="Musculação, Crossfit e Natação"
                      value="{{instructor.services}}"
                      >
            </div>
      </div>

      <button type="submit">Salvar</button>