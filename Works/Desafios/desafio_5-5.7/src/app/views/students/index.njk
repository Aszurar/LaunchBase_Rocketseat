{% extends "layout.njk" %}

{% block content %}
    <div class="card table-index">

        <div class="header">    
            <a class="buttonCreate create_students" href="/students/create">Novo</a>       
            <form action="/students" method="get">
                <input type ="text" 
                       name ="filter"
                       placeholder ="Digite o nome"
                       value = "{{filter}}"
                       class = "input_create_student"
                       >

                <button class = "filter_student" type="submit">Filtrar</button>
            </form>
        </div>
     
        {# tag para formar uma tabela #}
        <table>
            {# cabeçalho da tabela #}
            <thead>
                {# linha do cabeçalho  #}
                <tr>
                    {# coluna do cabeçalho #}
                    <th>Professores</th>
                    <th>Email</th>
                    <th>Ano</th>
                    <th>Sobre</th>
                </tr>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr class="student">
                        <td> 
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{student.name}}
                        </td>

                        <td class="email">{{student.email}}</td>

                        <td> <span class="grades">{{student.grades}}</span></td>

                        <td class="button-about"><a href="/students/{{student.id}}">VER</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <script src="/scripts/index.js"></script>
{% endblock %}