{% extends "layout.njk" %}

{% block content %}
        <div class="card">
        <section class="avatar" 
        style="background: url(https://source.unsplash.com/collection/628604/500x500) no-repeat center center / cover"></section>


        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome:</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade:</div>
                <div>{{teacher.age}} anos</div>
            </div>

           <div class="item">
                <div>Grau de escolaridade:</div>
                <div>{{teacher.graduation}}</div>
            </div>

             <div class="item">
                <div>Tipo de Aula</div>
                
                <div class="type">
                    {% for item in teacher.type %}
                        <span>{{item}}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Mat√©ria:</div>
                {% for item in teacher.classes %}
                    <div class="classes">
                        <span>{{item}}</span>
                    </div>
                {% endfor %}

            </div>

            <div class="item">
                <div>Desde:</div>
                <div>{{teacher.created_at}}</div>
            </div>

        </section>
    </div>
{% endblock %}