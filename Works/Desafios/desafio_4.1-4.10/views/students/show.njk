{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome:</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Idade:</div>
                <div>{{student.age}}
                    anos</div>
            </div>

            <div class="item" id="ultimateButtons">
                <div class="edit">
                    <a href="/students/{{student.id}}/edit" class="button">Editar</a>
                </div>

                <div class="delete">
                    <form action="/students?_method=DELETE" method="post">
                        <input type="hidden" name="id" value={{student.id}}>
                        <button type="submit">Deletar</button>
                    </form>
                </div>
            </div>

        </section>
    </div>

{% endblock %}