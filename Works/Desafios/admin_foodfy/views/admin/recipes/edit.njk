{% extends "../layoutManeger.njk" %}

{% block title %}
  <title>Editar</title>
  <link rel="stylesheet" href="/visuals/fields.css">
{% endblock %}

{% block content %}
  <div class="card">

    <div class="form-actions">

      <form id="form-delete" action="/admin/recipes?_method=DELETE" method="post">
        <div class="head_create">
          <h1>Editando Receita</h1>
          <input type="hidden" name="id" value="{{recipe.id}}">
          <button class="delete" type="submit">Deletar</button>
        </div>
      </form>

      <form method="POST" action="/admin/recipes?_method=PUT">
        <div class="head_create">
          <input type="hidden" name="id" value="{{recipe.id}}">
          <button class="save" type="submit">Salvar receita</button>
        </div>

        {% include "admin/recipes/fields.njk" %}
      </form>

    </div>
    
  </div>
  {% include "./confirm.njk" %}
{% endblock %}