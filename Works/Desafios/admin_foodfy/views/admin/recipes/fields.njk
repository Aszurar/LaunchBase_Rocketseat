        <div class="item">
            <div>Nome</div>
            <div>
                <input type="text" 
                       name="title" 
                       placeholder="Purê de..."
                       value= "{{recipe.title}}"
                       required
                       >
            </div>
        </div>

        <div class="item">
            <div>Autor</div>
            <div>
                 <input type="text" 
                        name="chef" 
                        placeholder="Lucas de..."
                        value= "{{recipe.chef}}"
                        required
                        >
            </div>
        </div>

        <div class="item">
            <div>Imagem da receita</div>
            <div>
                <input type="url" 
                       name="thumbnail" 
                       placeholder="https://..."
                       value="{{recipe.thumbnail}}"
                       required
                       >
            </div>
        </div>
        
            <div class="item" id="ingredients">
                <div>Ingredientes</div>
                <div class="ingredient">
                {% for item in recipe.ingredients %}
                    <input type="text" 
                        name="ingredients[]" 
                        placeholder="Pão de batata..."
                        value="{{item}}"
                        required
                        >
                {% endfor %}
                </div>
            </div>
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
            
            <div class="item" id="preparations">
                <div>Modo de preparo</div>
                <div class="preparation">
                {% for item in recipe.preparation %}
                    <input type="text" 
                        name="preparation[]" 
                        placeholder="Aqueça no forno por..."
                        value="{{item}}"
                        required
                        >
                {% endfor %}
                </div>
            </div>

        <button type="button" class="add-preparation">Adicionar novo passo</button>


        <div class="item">
            <div>Informações adicionais</div>
            <div>
                <textarea name="info" 
                          placeholder="Pode ser guardado na geladeira por..."
                          autocomplete=on
                          maxlength=1248
                          spellcheck=true
                          wrap=hard
                          >{{recipe.info}}</textarea>
            </div>
        </div>

<script src="../../scripts/addinfo.js"></script>