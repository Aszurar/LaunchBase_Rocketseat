{% extends "../layoutManeger.njk" %}

{% block head %}
<title>Triplo bacon burger</title>
<link rel="stylesheet" href="/visuals/fields.css">
{% endblock %}

{% block content %}
    <main class="card">
        <div class="head_show">
                <h1>{{names.subtitle[0]}} {{recipe.title}}</h1>
                <a href="/" class="editButton">{{names.editButton}}</a>
        </div>

        <div class="thumbnail">
            <img src="/assets/burger.png" alt="Imagem do Tripo Bacon Burger">
        </div>

        <div class="title">
            <h1>{{recipe.title}}</h1>
            <p>{{recipe.chef}}</p>
        </div>

        <div class="item" id="itemShow">
            <h2>{{names.subtitle[1]}}</h2>
            <ul>
                {% for item in recipe.ingredients %}
                    <li>{{item}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="item" id="itemShow">
            <h2>{{names.subtitle[2]}}</h2>
            <ul>
                {% for item in recipe.preparation %}
                    <li>   {{item}}</li>
                {% endfor %}
            </ul>

        </div>

        <div class="item" id="itemShow">
            <h2>{{names.subtitle[3]}}</h2>
            <p>{{recipe.info}}</p>
        </div>
    </main>
    
{% endblock %}