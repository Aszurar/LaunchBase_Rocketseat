{% extends "../layoutManeger.njk" %}

{% block head %}
    <title>Adicionar</title>
    <link rel="stylesheet" href="../../visuals/fields.css">
{% endblock %}

{% block content %}
    <form class="card" method="POST" action="/admin/recipes">

        <div class="head_create">
            <h1>Criando receita</h1>
            <button type="submit">Salvar receita</button>
        </div>

        <div class="item">
            <div>Imagem da receita</div>
            <div>
                <input type="url" 
                       name="thumbnail" 
                       placeholder="https://..."
                       required
                       >
            </div>
        </div>

        <div class="item" id="ingredients">
            <div>Ingredientes</div>
            <div class="ingredient">
                <input type="text" 
                       name="ingredients[]" 
                       placeholder="Pão de batata..."
                       required
                       >
            </div>
        </div>
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

        <div class="item">
            <div>Modo de preparo</div>
            <div>
                <input type="text" 
                       name="preparation" 
                       placeholder="Aqueça no forno por..."
                       required
                       >
            </div>
        </div>
        <button type="button" class="add-preparation">Adicionar novo passo</button>


        <div class="item">
            <div>Informações adicionais</div>
            <div>
                <textarea name="info" 
                          placeholder="Pode ser guardado na geladeira por..."
                          autocomplete=on
                          maxlength=1248
                          spellcheck=true
                          wrap=hard
                          ></textarea>
            </div>
        </div>

<script src="../../scripts/addinfo.js"></script>
    </form>
{% endblock %}