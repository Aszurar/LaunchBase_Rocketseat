{% extends "layout.njk" %}

{% block title %}
    <title>Conteúdos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block visuals %}
    <link rel="stylesheet" href="../visuals/conteudos.css">
{% endblock %}

{% block mark %}

    <div>
        <a href="/">Rocketseat</a>
    </div>

    <div>
        <a href="/about">Sobre</a>
    </div>

    <div class="here">
        <a href="/courses">Conteúdos</a>
    </div>

{% endblock %}

{% block content %}

    <div class="past">
        <div class="main">
            <selection class="cards">

                <div class="card" id="starter" frameid="start">

                    <div class="starter">

                        <div class="card__image-container">
                            <span>01</span>

                            <div class="img__card">
                                <img src="../assets/rocket.svg" alt="">
                            </div>

                            <div class="card__info">
                                <p>Torne-se um programado desejado no mercado com esses cursos gratuitos</p>
                            </div>

                        </div>

                        <div class="card__about">
                            <p>5 módulos</p>
                            <p class="card__price">Free</p>
                        </div>

                    </div>

                </div>

                <div class="card" id="launchbase" frameid="launch">

                    <div class="launchbase">

                        <div class="card__image-container">
                            <span>02</span>

                            <div class="img__card">
                                <img src="../assets/LaunchBase.svg" alt="">
                            </div>

                            <div class="card__info">
                                <p>Domine a programação do zero e tenha acesso às melhores oportunidades do mercado</p>
                            </div>

                        </div>

                        <div class="card__about">
                            <p>8 módulos</p>
                            <p class="card__price">Pago</p>
                        </div>

                    </div>

                </div>

                <div class="card" id="gostack" frameid="go">

                    <div class="gostack">

                        <div class="card__image-container">
                            <span>03</span>

                            <div class="img__card">
                                <img src="../assets/GoStack.svg" alt="">
                            </div>

                            <div class="card__info">
                                <p>Treinamento imersivo nas tecnologias mais modernas de desenvolvimento web e mobile
                                </p>
                            </div>

                        </div>

                        <div class="card__about">
                            <p>15 módulos</p>
                            <p class="card__price">Pago</p>
                        </div>

                    </div>

                </div>

            </selection>
        </div>
    </div>

    <div class="modal-overlay">

        <div class="modal">

            <a class="max-modal">
                <i class="material-icons">fullscreen</i>
            </a>

            <a class="min-modal">
                <i class="material-icons">fullscreen_exit</i>
            </a>

            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-contant">
                <iframe src="" frameborder="0"></iframe>
            </div>

        </div>

    </div>

    <script src="../scripts/script.js"></script>

{% endblock %}