{% extends "layout.njk" %}

{% block title %}
    <title>Conteúdos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block visuals %}
    <link rel="stylesheet" href="/visuals/conteudos.css">
{% endblock %}

{% block mark %}

    <div>
        <a href="/">Rocketseat</a>
    </div>

    <div>
        <a href="/about">Sobre</a>
    </div>

    <div class="here">
        <a href="/courses">Conteúdos</a>
    </div>

{% endblock %}

{% block content %}

    <div class="past">
        <div class="main">
            <section class="cards">

                {% for item in courses %}
                    <div class="card" id="{{item.title}}" frameid="go">

                        <div class="{{item.title}}">

                            <div class="card__image-container">
                                <span>{{item.numbers}}</span>

                                <div class="img__card">
                                    <img src="/assets/{{item.title}}.svg" alt="Ícone do {{item.title}}">
                                </div>

                                <div class="card__info">
                                    <p>{{item.description}}</p>
                                </div>

                            </div>

                            <div class="card__about">
                                <p>{{item.duration}}</p>
                                <p class="card__price">{{item.price}}</p>
                            </div>

                        </div>

                    </div>
                {% endfor %}

            </section>
        </div>
    </div>

    <script src="/scripts/script.js"></script>

{% endblock %}