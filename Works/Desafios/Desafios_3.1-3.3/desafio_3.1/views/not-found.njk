{% extends "layout.njk" %}

{% block title %}
    <title>{{errodata.title}}</title>
{% endblock %}

{% block visuals %}
    <link rel="stylesheet" href="/visuals/not-found.css">
{% endblock %}

{% block mark %}

    <div>
        <a href="/">Rocketseat</a>
    </div>

    <div>
        <a href="/about">Sobre</a>
    </div>

    <div>
        <a href="/courses">Conte√∫dos</a>
    </div>

{% endblock %}

{% block content %}
    <div class="card">

        <div class="erro">

            <div class="erronumber">
                <span>{{errodata.number}}</span>
            </div>

            <div class="card__image-container">

                <div class="main">
                    <div class="img__card">
                        <img src="/assets/{{errodata.number}}.svg" alt="Imagem do Erro {{errodata.number}}">
                    </div>

                    <div class="card__info">
                        <p>{{errodata.description}}</p>
                    </div>
                </div>

            </div>

            <div class="card__about">
                <p>{{errodata.info}}</p>
                <p class="erro__number">{{errodata.number}}</p>
            </div>

        </div>

    </div>
{% endblock %}