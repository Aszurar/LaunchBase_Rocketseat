{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="./visuals/recipe.css">
    <title></title>
{% endblock %}

{% block links %}
    <div class="links">
        <div>
            <a href="/about">Sobre</a>
        </div>

        <div class="here" id="recipe">
            <a href="/recipes">Receitas</a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <main class="principal">
        <div class="image-principal">
            <img src="{{recipes[0].image}}" alt="">
        </div>

        <div class="text">
            <div class="title">
                <h1>{{recipes[0].title}}</h1>
                <p>por {{recipes[0].author}}</p>
            </div>
        </div>
    </main>
{% endblock %}