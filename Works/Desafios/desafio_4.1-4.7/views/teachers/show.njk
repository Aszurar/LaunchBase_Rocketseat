{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome:</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade:</div>
                <div>{{teacher.age}}
                    anos</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade:</div>
                <div>{{teacher.graduation}}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>

                <div class="type">
                    {% for item in teacher.type %}
                        <span>{{item}}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Mat√©ria:</div>
                <div class="classes">

                    {% for item in teacher.classes %}
                        <span>{{item}}</span>
                    {% endfor %}
                </div>

            </div>

            <div class="item">
                <div>Desde:</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <div class="item" id="ultimateButtons">
                <div class="edit">
                    <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
                </div>

                <div class="delete">
                    <form id="form-delete"action="/teachers?_method=DELETE" method="post">
                        <input type="hidden" name="id" value={{teacher.id}}>
                        <button type="submit">Deletar</button>
                    </form>
                </div>
            </div>

        </section>
    </div>
{% include "../confirm.njk" %}
{% endblock %}